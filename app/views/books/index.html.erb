<div class="album py-5 bg-light">
  <div class="container">
    <%= form_tag books_path, method: :get, class: "d-flex", :id => "search_form" do %>
      <%= text_field_tag :search, params[:search], placeholder:"Encontre um livro ou autor", class: "form-control me-2" %>
    <% end %>
    <div id="books"><%= render 'preview' %></div>
  </div>
</div>